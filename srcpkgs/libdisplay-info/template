# Template file for 'libdisplay-info'
pkgname=libdisplay-info
version=0.1.1
revision=1
build_style=meson
hostmakedepends="pkg-config hwids"
makedepends=""
depends=""
short_desc="EDID and DisplayID library."
maintainer="Azaleth <azaleth@riseup.net>"
license="MIT"
